@model MIS333K_FinalProject.Models.Property

@{
    ViewData["Title"] = "Listing Details - ";
}

<h1>Details</h1>

<!-- Full-width horizontal line -->
<h4>Property</h4>
<hr />

<!-- Centered main content row with padding -->
<div class="container py-4">
    <div class="row justify-content-center">
        <!-- Left Column -->
        <div class="col-md-6 mb-4 mb-md-0">
            <dl class="row">
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.Street)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Street)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.ZipCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.Bedrooms)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bedrooms)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.Bathrooms)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bathrooms)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.GuestsAllowed)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GuestsAllowed)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.PetsAllowed)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PetsAllowed)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.FreeParking)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FreeParking)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.WeekdayPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WeekdayPrice)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.WeekendPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WeekendPrice)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.CleaningFee)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CleaningFee)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.DiscountRate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DiscountRate)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.MinNightsForDiscount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MinNightsForDiscount)
                </dd>
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.PropertyStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PropertyStatus)
                </dd>
            </dl>
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Host"))
                {
                    <p>
                        <a asp-action="Edit" asp-route-id="@Model?.PropertyId">Edit</a>
                    </p>
                }
            }
            <a asp-action="Index">Back to Listings</a>
        </div>

        <!-- Right Column -->
        <div class="col-md-4">
            <!-- Container for right column content, left-aligned -->
            <div class="mb-3">
                <h2>Availability</h2>
                <div class="calendar-container border p-3 mb-3">
                    <div id="calendar" class="w-100"></div> <!-- Full width for the calendar -->
                </div>
                <a asp-controller="Reservation" asp-action="Create" asp-route-propertyId="@Model.PropertyId" class="btn btn-primary">Make a Reservation</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />

    <script>$(document).ready(function () {
            $('#calendar').datepicker({
                format: 'mm/dd/yyyy',
                todayHighlight: true,
                autoclose: true
            });
        });</script>
}
