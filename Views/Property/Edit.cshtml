@model MIS333K_FinalProject.Models.Property


@{
    ViewData["Title"] = "Edit";
    // Get enum values for State and PropertyStatus
    var stateOptions = Enum.GetValues(typeof(MIS333K_FinalProject.Models.StateAbbr))
                           .Cast<MIS333K_FinalProject.Models.StateAbbr>()
                           .Select(s => new SelectListItem
                                   {
                                       Value = s.ToString(),
                                       Text = s.ToString()
                                   });
}

@{
    ViewData["Title"] = "Edit";
    // Get enum values for PropertyStatus
    var propstatusOptions = Enum.GetValues(typeof(MIS333K_FinalProject.Models.PropStatus))
                           .Cast<MIS333K_FinalProject.Models.PropStatus>()
                           .Select(s => new SelectListItem
                                   {
                                       Value = s.ToString(),
                                       Text = s.ToString()
                                   });
}


